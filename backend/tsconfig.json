{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["es2020"],
    "rootDir": "./src",
    "types": ["node"] // Asegúrate de que esto esté aquí (si el error de 'console' persiste)
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}